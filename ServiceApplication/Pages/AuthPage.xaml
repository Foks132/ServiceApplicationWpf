<Page x:Class="ServiceApplication.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">
    <Grid>
        <StackPanel Width="auto" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Style="{StaticResource label}" Margin="0,5">Логин</TextBlock>
            <TextBox x:Name="TbLogin"/>
            <TextBlock Style="{StaticResource label}" Margin="0,5">Пароль</TextBlock>
            <PasswordBox x:Name="TbPassword"/>
            <Button Background="{StaticResource Primary}" Margin="0,10,0,0" x:Name="BtnLogin" Click="BtnLogin_Click">Авторизация</Button>
        </StackPanel>
    </Grid>
</Page>
